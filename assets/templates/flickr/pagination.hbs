<div class="pagination pagination-centered">
    <ul>
      {{#paginate pagination type="previous"}}
          <li {{#if disabled}}class="disabled"{{/if}}><a href="javascript://" data-page="{{n}}" >Prev</a></li>
      {{/paginate}}
      {{#paginate pagination type="middle" limit="7"}}
          <li {{#if active}}class="active"{{/if}}><a href="javascript://" data-page="{{n}}">{{n}}</a></li>
      {{/paginate}}
      {{#paginate pagination type="next"}}
          <li {{#if disabled}}class="disabled"{{/if}}><a href="javascript://" data-page="{{n}}">Next</a></li>
      {{/paginate}}
    </ul>
</div>
